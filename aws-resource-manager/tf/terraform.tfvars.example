# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize the values

# AWS Region
aws_region = "us-east-1"

# Project settings
project_name = "sec-test"
environment  = "testing"

# Network settings
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# Security settings
# IMPORTANT: Change this to your actual IP address for secure SSH access
# You can get your IP with: curl ifconfig.me
allowed_ssh_cidr = "YOUR.IP.ADDRESS.HERE/32"

# EC2 settings (only needed if enabling instances)
instance_type = "t3.micro"

# SSH Key (only needed if enabling instances)
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/sec_test_key
# Then use: cat ~/.ssh/sec_test_key.pub
public_key_content = ""

# Example values (uncomment and modify):
# aws_region = "us-west-2"
# project_name = "my-security-test"
# allowed_ssh_cidr = "203.0.113.0/32"  # Replace with your real IP
