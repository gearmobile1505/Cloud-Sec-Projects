# Example Terraform variables for security testing
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "sec-test"
environment  = "testing"

# Network Configuration
vpc_cidr            = "10.0.0.0/16"
public_subnet_cidr  = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"

# Security Configuration
# IMPORTANT: Replace with your actual IP address for secure SSH access
# Get your IP with: curl ifconfig.me
allowed_ssh_cidr = "192.168.1.0/24"  # CHANGE THIS TO YOUR IP/32

# EC2 Configuration (if you uncomment EC2 resources)
instance_type      = "t3.micro"
public_key_content = ""  # Add your SSH public key content here

# Example:
# public_key_content = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... your-email@example.com"
